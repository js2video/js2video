{
  "name": "js2video",
  "author": "Tight Ship AB",
  "license": "MIT",
  "version": "0.0.1",
  "type": "module",
  "private": true,
  "packageManager": "pnpm@9.9.0",
  "engines": {
    "node": ">=20.17.0"
  },
  "scripts": {
    "dev": "pnpm --stream --parallel --r dev",
    "build": "pnpm -r build",
    "release": "node ./scripts/release.js",
    "release:version": "pnpm -r version $npm_config_version",
    "release:publish": "pnpm -r publish",
    "release:commit": "git add . && git commit -m 'Release $npm_config_version' && git tag v$npm_config_version",
    "release:tags": "git push && git push --tags"
  },
  "devDependencies": {
    "npm-run-all": "4.1.5"
  }
}
