{
    "compilerOptions": {
      "module": "NodeNext",
      "moduleResolution": "NodeNext",
      "target": "ESNext",
      "lib": ["ESNext", "DOM"],
      "checkJs": true,  
      "allowJs": true,
      "declaration": true, 
      "emitDeclarationOnly": true,
      "outDir": "types",
      "skipLibCheck": true
    },
    "include": ["src/**/*.js"],
    "exclude": ["node_modules"]
  }